<MudTreeView CanSelect="true" CanActivate="true">
    <MudTreeViewItem Text="Applications" @bind-Activated="Item1Activated" @bind-Selected="ParentItemSelected">
        <MudTreeViewItem Text="Calendar" />
        <MudTreeViewItem Text="Chrome" @bind-Selected="SubItemSelected" />
        <MudTreeViewItem Text="Webstorm" />
    </MudTreeViewItem>
    <MudTreeViewItem Text="Documents" @bind-Activated="Item2Activated">
        <MudTreeViewItem Text="OSS" />
        <MudTreeViewItem Text="Material-UI">
            <MudTreeViewItem Text="src">
                <MudTreeViewItem Text="index.js" />
                <MudTreeViewItem Text="tree-view.js" />
            </MudTreeViewItem>
        </MudTreeViewItem>
    </MudTreeViewItem>
</MudTreeView>

@code{
    public bool SubItemSelected { get; set; }

    public bool ParentItemSelected { get; set; }

    public bool Item1Activated { get; set; }

    public bool Item2Activated { get; set; }
}